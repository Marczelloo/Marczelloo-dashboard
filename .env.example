# Marczelloo Dashboard Environment Configuration
# Copy this to .env.local and fill in your values

# ========================================
# AtlasHub Configuration (REQUIRED)
# ========================================
ATLASHUB_API_URL=http://localhost:3001
ATLASHUB_SECRET_KEY=sk_your_secret_key_here

# ========================================
# Authentication
# ========================================
# Comma-separated list of allowed Cloudflare Access emails
OWNER_EMAILS=admin@example.com

# PIN hash (generate with: node -e "require('bcryptjs').hash('your-pin', 10).then(console.log)")
PIN_HASH=$2a$10$...

# Session secret for signing cookies (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# ========================================
# Development Mode (DO NOT USE IN PRODUCTION)
# ========================================
# Skip Cloudflare Access email check (use this email instead)
# DEV_USER_EMAIL=dev@example.com

# Skip PIN verification for all operations
# DEV_SKIP_PIN=true

# ========================================
# Encryption (for env vars at rest)
# ========================================
# 32-byte base64 encoded key (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=your-32-byte-base64-encoded-key

# ========================================
# Portainer Configuration
# ========================================
PORTAINER_URL=http://localhost:9000
PORTAINER_TOKEN=ptr_your_portainer_token

# ========================================
# Runner Service Configuration
# ========================================
RUNNER_URL=http://127.0.0.1:8787
RUNNER_TOKEN=your_runner_shared_secret

# SSH Configuration for Terminal/Host Access (used by runner in Docker)
# The runner container connects via SSH to the Pi host to execute commands
SSH_USER=pi
SSH_KEY_PATH=~/.ssh/id_rsa
DEFAULT_CWD=/home/pi
PROJECTS_DIR=/home/pi/projects

# ========================================
# Notifications
# ========================================
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# SMTP (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@example.com

# ========================================
# Application Settings
# ========================================
# Base URL of the application (for webhooks, notifications)
APP_URL=https://dashboard.yourdomain.com

# PIN session TTL in seconds (default: 30 minutes)
PIN_SESSION_TTL=1800
